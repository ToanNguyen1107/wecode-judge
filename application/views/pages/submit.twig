{% set selected = 'submit' %}
{% extends 'templates/base.twig' %}
{% block icon %}fa-location-arrow{% endblock %}
{% block title %}Submit{% endblock %}
{% block head_title %}Submit{% endblock %}

{% block other_assets %}
    <link rel="stylesheet" type='text/css' href="{{ base_url('assets/styles/submit_page.css') }}"/>
{% endblock %}


{% block body_end %}
<script src="{{ base_url('assets/js/src-min-noconflict/ace.js') }}" type="text/javascript" charset="utf-8"></script>
<script  type="text/javascript" src="{{ base_url('assets/js/submit_page.js')   }}" charset="utf-8"></script>
<script>
	shj.p={};
	{{ problems_js|raw }}

	shj.selected_assignment = {{ user.selected_assignment.id }};
	$(document).ready(function(){
		///Select the problem from referring page
		{% if from == '' %}
			$("select#problems").val(1);
		{% else  %}
			$("select#problems").val({{ from }});
		{% endif %}
		$("select#problems").change();
	});
</script>

{% endblock %}



{% block main_content %}
{% if error != 'none' %}
<p>{{ error }}</p>
{% else %}
	{{ form_open_multipart('submit') }}
	<div class="inp_grp">
		<div class="input_p">
			<label for="problems" class="">Problem:</label>
			<select id="problems" name ="problem" class="sharif_input">
				<!--option value="0" selected="selected">-- Select Problem --</option-->
				{% for problem in problems %}
					<option dir="auto" value="{{ problem.id }}">#{{problem.id}}--{{ problem.name }}
					</option>
				{% endfor %}
			</select>
			<br/>
			<span class="medium"><a id="problem_link" href="#" target="_blank">Problem statement</a>
			</span>
			{{ form_error('problem','<div class="shj_error">','</div>') }}
		</div>
		<div class="input_p">
			<label for="languages" class="">Language:</label>
			<select id="languages" name="language" class="sharif_input">
				<!--option value="0" selected="selected">-- Select Language --</option-->
			</select>
			{{ form_error('language','<div class="shj_error">','</div>') }}
		</div>

		<div class="input_p">
			<label for="code" class="">Code theme:</label>
			<select id="theme" class="sharif_input">
				<option value="ambiance">ambiance</option>
				<option value="chaos">chaos</option>
				<option value="chrome">chrome</option>
				<option value="clouds">clouds</option>
				<option value="clouds_midnight">clouds_midnight</option>
				<option value="cobalt">cobalt</option>
				<option value="crimson_editor">crimson_editor</option>
				<option value="dawn">dawn</option>
				<option value="dreamweaver">dreamweaver</option>
				<option value="eclipse">eclipse</option>
				<option value="github">github</option>
				<option value="idle_fingers">idle_fingers</option>
				<option value="iplastic">iplastic</option>
				<option value="katzenmilch">katzenmilch</option>
				<option value="kr_theme">kr_theme</option>
				<option value="kuroir">kuroir</option>
				<option value="merbivore">merbivore</option>
				<option value="merbivore_soft">merbivore_soft</option>
				<option value="mono_industrial">mono_industrial</option>
				<option value="monokai">monokai</option>
				<option value="pastel_on_dark">pastel_on_dark</option>
				<option value="solarized_dark">solarized_dark</option>
				<option value="solarized_light">solarized_light</option>
				<option value="sqlserver">sqlserver</option>
				<option value="terminal">terminal</option>
				<option value="textmate">textmate</option>
				<option value="tomorrow">tomorrow</option>
				<option value="tomorrow_night">tomorrow_night</option>
				<option value="tomorrow_night_blue">tomorrow_night_blue</option>
				<option value="tomorrow_night_bright">tomorrow_night_bright</option>
				<option value="tomorrow_night_eighties">tomorrow_night_eighties</option>
				<option value="twilight">twilight</option>
				<option value="vibrant_ink">vibrant_ink</option>
			</select>
		</div>
	</div>

	<div class="" id="banned"></div>

	<div class="template-grp" id="before-grp">
	  <div><label for="">Template's header</label> These lines will goes before your code</div>
	  	<div class="template" id="before" >abc</div>

	</div>

	<div class="editor-grp">
	  <div><label for="">Your code</label></div>
	  		<div id="editor"></div>
	</div>

	<div class="template-grp" id="after-grp">
	  <div><label for="">Template's footer</label> These lines will goes after your code</div>
	<div class="template" id="after" >def</div>

	</div>


	<p class="input_p">
		<input type="submit" value="Submit" class="sharif_input"/>
	</p>
	<textarea style="display:none;" rows="4" cols="80" name="code" class="sharif_input add_text" >
	</form>

{% endif %}
{% endblock %}  {# main_content #}
