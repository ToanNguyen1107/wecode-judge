<!-- <div id="top_bar" class="color-{{ selected }}"> -->
<nav class="navbar navbar-expand-md navbar-dark fixed-top color-{{ selected }} bg-dark">
	<!-- <div id="shj_logo" class="top_left"> -->
	<a  class="navbar-brand" href="{{ site_url('/') }}">
		<img src="{{ base_url('assets/images/logo.png') }}" height="40px" />
		{{ user.site_name }}
	</a>
	<!-- </div> -->
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
	        <span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarCollapse">
		<ul class="navbar-nav mr-auto">
			{%  if user.level >= 2 %}
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Tools
				</a>
				<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
					<a class="dropdown-item" href="{{ site_url('rejudge') }}">Rejudge</a>
					<a class="dropdown-item" href="{{ site_url('queue') }}">Submission Queue</a>
					<a class="dropdown-item" href="{{ site_url('moss/'~user.selected_assignment['id']) }}">Cheat Detection</a>
				</div>
			</li>
			{% endif %}
			<li class="nav-item dropdown">
				<a class="nav-link dropdown-toggle" href="{{ site_url('assignments') }}" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					<span dir="auto" class="assignment_name">{{ user.selected_assignment.name|length > 30 ? user.selected_assignment.name|slice(0, 30) ~ '...' : user.selected_assignment.name }}</span>
				</a>
				<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
					{% for assignment_item in all_assignments|reverse[:5] %}
						<a class="dropdown-item">
							<i class="fa fa-lg {{ assignment_item.id == user.selected_assignment.id ? 'fa-check-square-o color6' : 'fa-square-o' }}" data-id="{{ assignment_item.id }}"></i>
							{{ assignment_item.name }}
						</a>
					{% endfor %}

					<a  class="dropdown-item" href="{{ site_url('assignments') }}">All Assignments</a>

				</div>
			</li>
		</ul>

		<div class="top_object top_left shj-spinner" style="display: none;">
			<i class="fa fa-refresh fa-spin fa-lg"></i>
		</div>

		<div class="top_object countdown" id="countdown">
			<div class="time_block">
				<span id="time_days" class="countdown_num"></span><br>
				<span class="time_label" id="days_label"></span>
			</div>
			<div class="time_block">
				<span id="time_hours" class="countdown_num"></span><br>
				<span class="time_label" id="hours_label"></span>
			</div>
			<div class="time_block">
				<span id="time_minutes" class="countdown_num"></span><br>
				<span class="time_label" id="minutes_label"></span>
			</div>
			<div class="time_block">
				<span id="time_seconds" class="countdown_num"></span><br>
				<span class="time_label" id="seconds_label"></span>
			</div>
		</div>
		<div class="top_object countdown" id="extra_time">
			<i class="fa fa-plus-square fa-2x"></i>
			<div class="time_block">
				<span>Extra</span><br><span>Time</span>
			</div>
		</div>

		<!-- <div class="top_object shj_menu" id="user_top"> -->
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="{{ site_url('profile') }}" id="profile_link"><i class="fa fa-user"></i></a>
			<div class="top_menu user-menu">
				<div class="gravatar"><img src="https://www.gravatar.com/avatar/{{ md5(user.email) }}?s=70&d=identicon" /></div>
				<div class="name"><i class="fa fa-user"></i> {{ user.username }}</div>
				<div class="menu-controls">
					<a href="{{ site_url('logout') }}" class="logout-btn"><i class="fa fa-sign-out"></i> Sign Out</a>
					<a href="{{ site_url('profile') }}" class="profile-btn"><i class="fa fa-wrench"></i> Profile</a>
				</div>
			</div>
		</li>
	</div>
</nav>
